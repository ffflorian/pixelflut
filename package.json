{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "pixelflut": "dist/cli.js"
  },
  "dependencies": {
    "commander": "2.20.0",
    "jpeg-js": "0.3.5",
    "pngjs": "3.4.0"
  },
  "description": "Flood pixels",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.5",
    "@ffflorian/semantic-release-config": "0.1.4",
    "@ffflorian/tslint-config": "0.7.0",
    "@semantic-release/changelog": "3.0.5",
    "@semantic-release/git": "7.0.18",
    "@types/jasmine": "3.4.5",
    "@types/jpeg-js": "0.3.0",
    "@types/node": "~12",
    "@types/pngjs": "3.3.2",
    "husky": "3.0.9",
    "jasmine": "3.5.0",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "publish-flat": "1.3.4",
    "rimraf": "3.0.0",
    "semantic-release": "15.13.30",
    "ts-node": "8.4.1",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.6.4"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "spec/**/*.ts": [
      "tslint --project tsconfig.jasmine.json --fix",
      "git add"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "name": "pixelflut",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/pixelflut.git",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix && yarn lint:ts:spec --fix",
    "flatten": "publish-flat -o flattened",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:spec": "tslint --project tsconfig.jasmine.json",
    "postversion": "node ../node_modules/publish-flat/cli-copy.js -i package.json -o ../package.json version",
    "prettier": "prettier \"*.{json,md}\"",
    "release": "semantic-release",
    "start": "ts-node src/cli.ts",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "1.2.0"
}
